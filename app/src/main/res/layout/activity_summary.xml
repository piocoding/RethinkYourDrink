<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".RecordActivity">

    <TextView
        android:id="@+id/TVSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="Summary"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        />

    <TextView
        android:id="@+id/TVDay1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVSummary"
        android:gravity="center"
        android:text="Day 1"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay1Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay1"
        android:layout_alignStart="@id/TVDay1"
        android:layout_alignEnd="@id/TVDay1"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay1Plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay1Amount"
        android:layout_alignStart="@id/TVDay1"
        android:layout_alignEnd="@id/TVDay1"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay1NonSweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay1Plain"
        android:layout_alignStart="@id/TVDay1"
        android:layout_alignEnd="@id/TVDay1"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/purple"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay1Sweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay1NonSweet"
        android:layout_alignStart="@id/TVDay1"
        android:layout_alignEnd="@id/TVDay1"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-condensed-medium"/>

    <TextView
        android:id="@+id/TVDay2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVSummary"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Day 2"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay2Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay2"
        android:layout_alignStart="@id/TVDay2"
        android:layout_alignEnd="@id/TVDay2"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay2Plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay2Amount"
        android:layout_alignStart="@id/TVDay2"
        android:layout_alignEnd="@id/TVDay2"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay2NonSweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay2Plain"
        android:layout_alignStart="@id/TVDay2"
        android:layout_alignEnd="@id/TVDay2"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/purple"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay2Sweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay2NonSweet"
        android:layout_alignStart="@id/TVDay2"
        android:layout_alignEnd="@id/TVDay2"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-condensed-medium"/>


    <TextView
        android:id="@+id/TVDay3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVSummary"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="Day 3"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay3Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay3"
        android:layout_alignStart="@id/TVDay3"
        android:layout_alignEnd="@id/TVDay3"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="30dp"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:id="@+id/TVDay3Plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay3Amount"
        android:layout_alignStart="@id/TVDay3"
        android:layout_alignEnd="@id/TVDay3"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/blue"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay3NonSweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay3Plain"
        android:layout_alignStart="@id/TVDay3"
        android:layout_alignEnd="@id/TVDay3"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/purple"
        android:fontFamily="sans-serif-condensed-medium"/>
    <TextView
        android:id="@+id/TVDay3Sweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVDay3NonSweet"
        android:layout_alignStart="@id/TVDay3"
        android:layout_alignEnd="@id/TVDay3"
        android:gravity="center"
        android:text="0000 ml"
        android:textSize="27dp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-condensed-medium"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@id/TVDay1Sweet"
        android:layout_marginTop="20dp"
        android:background="@color/SVbackground"
        android:padding="15dp"
        android:elevation="3dp">
        <TextView
            android:id="@+id/DataField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 0   [DrinkName]   0000ml"
            android:textSize="23dp"
            android:fontFamily="sans-serif-condensed"/>
    </ScrollView>

    <Button
        android:id="@+id/BtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Back"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        />


</RelativeLayout>